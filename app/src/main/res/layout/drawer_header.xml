<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="172dp"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingTop="@dimen/spacing_medial_24"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/green_bubbles_wide">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color_accent"
        android:layout_marginTop="@dimen/spacing_normal_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_normal_16">
        <TextView
            android:id="@+id/user_name_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сусев Сергей"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/user_mail_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sergejsusev@yandex.ru"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>