<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"
        android:paddingTop="@dimen/spacing_medial_24"
        android:paddingBottom="@dimen/spacing_medial_24">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="bottom|center_horizontal"
                android:text="51"/>
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Рейтинг"/>
        </LinearLayout>
        <View
            style="@style/divider_vertical">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="bottom|center_horizontal"
                android:text="51"/>
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Написано строк кода"/>
        </LinearLayout>
        <View
            style="@style/divider_vertical">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="bottom|center_horizontal"
                android:text="51"/>
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Проектов"
                android:gravity="top|center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_call_black_24dp"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    style="@style/text"
                    android:id="@+id/phone_text"
                    android:inputType="phone"
                    android:hint="Мобильный телефон"
                    android:fontFamily="sans-serif-condensed"
                    android:text="891247080"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/mail_text"
                    style="@style/text"
                    android:inputType="textEmailAddress"
                    android:text="sergejsusev@yandex.ru"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="E-mail"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/vk_circle"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/vk_text"
                    style="@style/text"
                    android:text="vk.com/nenton51"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Ссылка в VK"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/github_circle"/>

        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/github_text"
                    style="@style/text"
                    android:text="github.com/Nenton/Devintensive"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Репозиторий"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_person_black_24dp"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    style="@style/text"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/about_text"
                    android:ellipsize="end"
                    android:text="Студент. Всем добра и позитива. Привет всем из Армавира =)."
                    android:hint="О себе"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>