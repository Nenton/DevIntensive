<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_drawer"
    tools:context=".ui.activities.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">
<android.support.design.widget.CoordinatorLayout

    android:id="@+id/main_coordinator_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
    
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        app:theme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/color_primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/profile_user_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_image_size"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_photo"
                android:fitsSystemWindows="true"/>

            <android.support.v7.widget.Toolbar
                app:theme="@style/AppTheme.PopupOverlay"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:titleTextColor="@color/white"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"
        android:paddingTop="@dimen/spacing_medial_24"
        android:paddingBottom="@dimen/spacing_medial_24">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="bottom|center_horizontal"
                android:text="51"/>
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Рейтинг"/>
        </LinearLayout>
        <View
            style="@style/divider_vertical">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="bottom|center_horizontal"
                android:text="51"/>
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Написано строк кода"/>
        </LinearLayout>
        <View
            style="@style/divider_vertical">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_large_72"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/spacing_medial_24"
                android:gravity="bottom|center_horizontal"
                android:text="51"/>
            <TextView
                style="@style/margin_tools_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Проектов"
                android:gravity="top|center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_call_black_24dp"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    style="@style/text"
                    android:id="@+id/phone_text"
                    android:inputType="phone"
                    android:hint="Мобильный телефон"
                    android:fontFamily="sans-serif-condensed"
                    android:text="891247080"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/mail_text"
                    style="@style/text"
                    android:inputType="textEmailAddress"
                    android:text="sergejsusev@yandex.ru"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="E-mail"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/vk_circle"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/vk_text"
                    style="@style/text"
                    android:text="vk.com/nenton51"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Ссылка в VK"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/github_circle"/>

        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/github_text"
                    style="@style/text"
                    android:text="github.com/Nenton/Devintensive"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Репозиторий"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_larger_72">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginBottom="@dimen/spacing_small_8">
        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_person_black_24dp"
            />
        <LinearLayout
            style="@style/linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    style="@style/text"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/about_text"
                    android:ellipsize="end"
                    android:text="Студент. Всем добра и позитива =)."
                    android:hint="О себе"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_create_black_24dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|right"
        android:layout_marginRight="@dimen/right_float_btn"/>

</android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>